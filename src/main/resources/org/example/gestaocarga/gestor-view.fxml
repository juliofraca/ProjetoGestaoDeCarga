<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane styleClass="stack-pane"
           xmlns="http://javafx.com/javafx/17.0.12"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.example.gestaocarga.controller.GestorController">

    <children>

        <AnchorPane>
            <HBox spacing="20"
                  styleClass="top-bar"
                  AnchorPane.topAnchor="0"
                  AnchorPane.leftAnchor="0"
                  AnchorPane.rightAnchor="0"
                  alignment="CENTER_LEFT">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>

                <Button text="Adicionar Carga" onAction="#abrirTelinha"/>
                <Pane HBox.hgrow="ALWAYS"/>

                <Button text="Sair" onAction="#voltarMenu"/>

            </HBox>
            <FlowPane fx:id="containerCards"
                      hgap="10" vgap="10"
                      AnchorPane.topAnchor="60"
                      AnchorPane.leftAnchor="10"
                      AnchorPane.rightAnchor="10"
                      AnchorPane.bottomAnchor="10"/>
        </AnchorPane>
        <AnchorPane fx:id="adicionarTelinha"
                    visible="false"
                    style="-fx-background-color: rgba(0,0,0,0.4);"
                    AnchorPane.topAnchor="0"
                    AnchorPane.bottomAnchor="0"
                    AnchorPane.leftAnchor="0"
                    AnchorPane.rightAnchor="0">

            <VBox alignment="CENTER"
                  spacing="12"
                  prefWidth="350"
                  style="-fx-background-color: white; -fx-background-radius: 10;"
                  maxWidth="350" maxHeight="280"
                  AnchorPane.topAnchor="0"
                  AnchorPane.bottomAnchor="0"
                  AnchorPane.leftAnchor="0"
                  AnchorPane.rightAnchor="0">

                <Label text="Adicionar Carga" style="-fx-font-size: 20;"/>

                <TextField fx:id="txtOrigem" promptText="Origem"/>
                <TextField fx:id="txtDestino" promptText="Destino"/>
                <DatePicker fx:id="txtDataEntrega" promptText="Data de entrega"/>

                <HBox alignment="CENTER" spacing="15">
                    <Button text="Salvar" onAction="#salvarCarga"/>
                    <Button text="Cancelar" onAction="#fecharTelinha"/>
                </HBox>
            </VBox>

        </AnchorPane>

    </children>

</StackPane>